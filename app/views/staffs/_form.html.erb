<%= form_with(model: staff) do |form| %>
<% if staff.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% staff.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :full_name, class: label_class %>
          <%= form.text_field :full_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :address, class: label_class %>
          <%= form.text_field :address, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone, class: label_class %>
          <%= form.number_field :phone, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :email, class: label_class %>
          <%= form.text_field :email, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :username, class: label_class %>
          <%= form.text_field :username, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :password, class: label_class %>
          <%= form.text_field :password, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :role_id, class: label_class %>
          <%= form.select :role_id,options_from_collection_for_select( Role.all, 'id', 'name', selected = staff.role_id), class: label_class%>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if staff.persisted? %>
<%= link_to "Cancel", staff, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", staffs_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
