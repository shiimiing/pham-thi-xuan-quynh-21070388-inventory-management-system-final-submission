          <%= form.text_field :address, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone, class: label_class %>
          <%= form.number_field :phone, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :email, class: label_class %>
          <%= form.text_field :email, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :others_details, class: label_class %>
          <%= form.text_field :others_details, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if supplier.persisted? %>
<%= link_to "Cancel", supplier, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", suppliers_path, class:  "text-neutral-700 underline inline-block ml-3" %>
